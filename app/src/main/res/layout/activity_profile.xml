<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_button_text_color"
    tools:context=".activities.ProfileActivity">
    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/img_proPick"
        android:layout_width="@dimen/profile_pick_size"
        android:layout_height="@dimen/profile_pick_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileAct_toolbar"
        android:src="@drawable/ic_user_placeholder"
        android:layout_marginTop="25dp"
        />
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/profileAct_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
           android:text="@string/profile_info_toolbarlbl"
           android:textColor="@color/login_button_text_color"
           android:textSize="@dimen/toolbar_text_size"/>


    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:id="@+id/txt_name"
        android:textColor="@color/black"
        android:text="Jhon Doe"
        android:textSize="@dimen/proName_txtSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_proPick"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:text="jhondoe22@yahoo.com"
        android:textSize="@dimen/proName_txtSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_name"
        />
    <TextView
        android:id="@+id/txt_myGym"
        android:layout_width="wrap_content"
        android:text="My Gym"
        android:textSize="@dimen/proName_txtSize"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/txt_gender"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/proName_txtSize"
        android:layout_marginTop="10dp"
        android:text="Male/Female"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_myGym"/>
    <Button
        android:id="@+id/btnEdit"
        android:background="@drawable/custom_button"
        android:text="@string/edit_info"
        android:textColor="@color/login_button_text_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_gender"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>